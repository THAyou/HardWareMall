            <label class="layui-form-label layui-form-required">排序:</label>
            <div class="layui-input-block">
                <input name="sort" oninput="value=value.replace(/[^\d]/g,'')" placeholder="请输入排序" class="layui-input"
                       lay-verType="tips" />
            </div>
        </div>
