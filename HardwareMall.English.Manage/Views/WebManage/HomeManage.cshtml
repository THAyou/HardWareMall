            <div class="layui-input-block text-right">
                <a class="layui-btn layui-btn-primary" id="closePassword" ew-event="closeDialog">取消</a>
                <a class="layui-btn" lay-filter="submit-psw" lay-submit>保存</a>
            </div>
        </div>
    </form>
